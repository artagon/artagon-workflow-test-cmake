From 1bee6acaec267c883e8685e49c6bf14fb71a1328 Mon Sep 17 00:00:00 2001
From: trumpyla <trumpyla@gmail.com>
Date: Sat, 25 Oct 2025 14:49:20 -0400
Subject: [PATCH] fix: correct workflow parameters (cxx-standard, remove
 run-tests)

- Changed cpp-standard to cxx-standard (correct parameter name)
- Removed run-tests parameter (not supported by cmake workflows)

These invalid parameters were causing startup_failure
---
 .github/workflows/ci.yml | 13 +++----------
 1 file changed, 3 insertions(+), 10 deletions(-)

diff --git a/.github/workflows/ci.yml b/.github/workflows/ci.yml
index b1d3910..1ade85d 100644
--- a/.github/workflows/ci.yml
+++ b/.github/workflows/ci.yml
@@ -39,7 +39,6 @@ jobs:
     uses: artagon/artagon-workflows/.github/workflows/cmake_c_ci.yml@feature/update-cache-and-sync-ci
     with:
       c-standard: '11'
-      run-tests: true
     secrets: inherit
 
   # Test C with C17 standard
@@ -48,7 +47,6 @@ jobs:
     uses: artagon/artagon-workflows/.github/workflows/cmake_c_ci.yml@feature/update-cache-and-sync-ci
     with:
       c-standard: '17'
-      run-tests: true
     secrets: inherit
 
   # Test C with C23 standard
@@ -57,7 +55,6 @@ jobs:
     uses: artagon/artagon-workflows/.github/workflows/cmake_c_ci.yml@feature/update-cache-and-sync-ci
     with:
       c-standard: '23'
-      run-tests: true
     secrets: inherit
 
   # Test C with custom CMake options
@@ -67,7 +64,6 @@ jobs:
     with:
       c-standard: '17'
       cmake-options: '-DCMAKE_VERBOSE_MAKEFILE=ON'
-      run-tests: true
     secrets: inherit
 
   # Test C++ with default configuration
@@ -84,8 +80,7 @@ jobs:
     uses: artagon/artagon-workflows/.github/workflows/cmake_cpp_ci.yml@feature/update-cache-and-sync-ci
     with:
       source-dir: 'cpp'
-      cpp-standard: '17'
-      run-tests: true
+      cxx-standard: '17'
     secrets: inherit
 
   # Test C++ with C++20 standard
@@ -94,8 +89,7 @@ jobs:
     uses: artagon/artagon-workflows/.github/workflows/cmake_cpp_ci.yml@feature/update-cache-and-sync-ci
     with:
       source-dir: 'cpp'
-      cpp-standard: '20'
-      run-tests: true
+      cxx-standard: '20'
     secrets: inherit
 
   # Test C++ with C++23 standard
@@ -104,8 +98,7 @@ jobs:
     uses: artagon/artagon-workflows/.github/workflows/cmake_cpp_ci.yml@feature/update-cache-and-sync-ci
     with:
       source-dir: 'cpp'
-      cpp-standard: '23'
-      run-tests: true
+      cxx-standard: '23'
     secrets: inherit
 
   # Summary job to check all tests passed
